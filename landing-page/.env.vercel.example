# Vercel Environment Variables for Landing Page
# Copy these to your Vercel project settings

# Firebase Configuration (Public)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Stripe Configuration (Public)
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_live_or_test_key

# Application URLs
NEXT_PUBLIC_APP_URL=https://your-landing-domain.vercel.app
NEXT_PUBLIC_ADMIN_URL=https://your-admin-domain.vercel.app
NEXT_PUBLIC_MOBILE_APP_URL=https://memorybox.app

# Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# SEO Configuration
NEXT_PUBLIC_SITE_NAME=Memory Box
NEXT_PUBLIC_SITE_DESCRIPTION=Preserve and share your precious family memories
NEXT_PUBLIC_SITE_URL=https://memorybox.app

# Environment
NODE_ENV=production
NEXT_PUBLIC_ENV=production
