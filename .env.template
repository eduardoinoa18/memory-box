# Memory Box - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ========================================
# FIREBASE CONFIGURATION
# ========================================
# Get these from Firebase Console > Project Settings > General
EXPO_PUBLIC_FIREBASE_API_KEY="your-firebase-api-key"
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
EXPO_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="123456789"
EXPO_PUBLIC_FIREBASE_APP_ID="1:123456789:web:abcdef123456"
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID="G-XXXXXXXXXX"

# Firebase Admin SDK (Server-side only)
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com"

# ========================================
# STRIPE CONFIGURATION
# ========================================
# Get these from Stripe Dashboard > Developers > API Keys
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_xxxxxxxxxxxxxxxxxxxxx"
STRIPE_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxxxxxxxxxx"

# ========================================
# PRIZEOUT CONFIGURATION
# ========================================
# Get these from Prizeout Developer Portal
EXPO_PUBLIC_PRIZEOUT_API_KEY="your-prizeout-api-key"
PRIZEOUT_SECRET_KEY="your-prizeout-secret-key"
PRIZEOUT_WEBHOOK_SECRET="your-prizeout-webhook-secret"

# ========================================
# DEPLOYMENT CONFIGURATION
# ========================================
# Environment: development, staging, production
NODE_ENV="development"
EXPO_PUBLIC_APP_ENV="development"

# API Base URLs
EXPO_PUBLIC_API_BASE_URL="https://api.memorybox.app"
EXPO_PUBLIC_ADMIN_URL="https://admin.memorybox.app"
EXPO_PUBLIC_WEB_URL="https://memorybox.app"

# ========================================
# EAS BUILD CONFIGURATION
# ========================================
# Apple Developer Team ID (for iOS builds)
APPLE_TEAM_ID="XXXXXXXXXX"

# Google Services (for Android builds)
GOOGLE_SERVICES_JSON_BASE64="base64-encoded-google-services.json"

# ========================================
# ANALYTICS & MONITORING
# ========================================
# Google Analytics
EXPO_PUBLIC_GA_TRACKING_ID="G-XXXXXXXXXX"

# Sentry (Error Monitoring)
SENTRY_DSN="https://xxxxxxxx@sentry.io/xxxxxxxx"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# ========================================
# PUSH NOTIFICATIONS
# ========================================
# Expo Push Notifications
EXPO_ACCESS_TOKEN="your-expo-access-token"

# ========================================
# SOCIAL MEDIA INTEGRATION
# ========================================
# Facebook App ID (for social login/sharing)
EXPO_PUBLIC_FACEBOOK_APP_ID="123456789012345"

# Google OAuth (for social login)
EXPO_PUBLIC_GOOGLE_CLIENT_ID="xxxxx.apps.googleusercontent.com"

# Apple Sign-In Service ID (for iOS)
EXPO_PUBLIC_APPLE_SERVICE_ID="com.memorybox.signin"

# ========================================
# EMAIL SERVICES
# ========================================
# SendGrid (for transactional emails)
SENDGRID_API_KEY="SG.xxxxxxxxxxxxxxxxxx"
SENDGRID_FROM_EMAIL="noreply@memorybox.app"

# ========================================
# SECURITY
# ========================================
# JWT Secret for API authentication
JWT_SECRET="your-super-secure-jwt-secret-key"

# Encryption key for sensitive data
ENCRYPTION_KEY="your-32-character-encryption-key"

# ========================================
# DEVELOPMENT ONLY
# ========================================
# Enable Firebase Emulators (development only)
USE_FIREBASE_EMULATOR="false"
FIREBASE_EMULATOR_HOST="localhost"

# Enable debug logging
DEBUG_MODE="false"

# Bypass authentication (development only)
BYPASS_AUTH="false"

# ========================================
# INSTRUCTIONS
# ========================================
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual keys
# 3. Never commit .env files to version control
# 4. For production, set these in your hosting platform:
#    - Vercel: Project Settings > Environment Variables
#    - EAS: Use `eas secret:create` command
#    - Firebase: Functions config or environment variables
# 5. Keep this template updated when adding new variables
