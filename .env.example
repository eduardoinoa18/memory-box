# Firebase Configuration
# Copy this to .env.local and fill in your Firebase project values
# Get these from Firebase Console > Project Settings > General > Your apps

EXPO_PUBLIC_FIREBASE_API_KEY=your_api_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=1:your_app_id:web:your_app_code

# Stripe Configuration
# Get these from Stripe Dashboard > Developers > API Keys
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Stripe Price IDs (from Stripe Dashboard > Products)
EXPO_PUBLIC_STRIPE_PREMIUM_PRICE_ID=price_premium_id_here
EXPO_PUBLIC_STRIPE_FAMILY_PRICE_ID=price_family_id_here

# App URLs for Stripe checkout
EXPO_PUBLIC_SUCCESS_URL=https://yourdomain.com/success
EXPO_PUBLIC_CANCEL_URL=https://yourdomain.com/cancel

# Environment
NODE_ENV=development

# Optional: Firebase Emulator Settings (for local development)
# EXPO_PUBLIC_USE_FIREBASE_EMULATOR=true
# EXPO_PUBLIC_FIREBASE_AUTH_EMULATOR_PORT=9099
# EXPO_PUBLIC_FIREBASE_FIRESTORE_EMULATOR_PORT=8080
# EXPO_PUBLIC_FIREBASE_STORAGE_EMULATOR_PORT=9199
