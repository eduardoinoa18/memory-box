{
  "expo": {
    "name": "Memory Box MVP",
    "slug": "memory-box-mvp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#3B82F6"
    },
    "assetBundlePatterns": [
      "assets/**"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.memorybox.mvp",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Memory Box needs camera access to capture memories.",
        "NSPhotoLibraryUsageDescription": "Memory Box needs photo library access to save memories."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#3B82F6"
      },
      "package": "com.memorybox.mvp",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/icon.png",
      "bundler": "metro",
      "output": "static"
    },
    "platforms": ["ios", "android", "web"],
    "plugins": [
      "expo-camera",
      "expo-document-picker",
      "expo-image-picker"
    ],
    "experiments": {
      "typedRoutes": false
    }
  }
}
