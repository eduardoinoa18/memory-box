rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User documents - users can only access their own data
    // Admin users can read all user documents
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && 
                     request.auth.token.admin == true;
    }
    
    // Memories - users can only access their own memories
    // MVP version: simplified rules for essential functionality
    match /memories/{memoryId} {
      allow read, write: if request.auth != null && 
                            request.auth.uid == resource.data.userId;
      allow read: if request.auth != null && 
                     request.auth.token.admin == true;
      allow create: if request.auth != null && 
                       request.auth.uid == request.resource.data.userId;
    }
    
    // Admin collections - only admin users can access
    match /admin/{document=**} {
      allow read, write: if request.auth != null && 
                            request.auth.token.admin == true;
    }
    
    // Analytics and system data - admin only
    match /analytics/{document=**} {
      allow read, write: if request.auth != null && 
                            request.auth.token.admin == true;
    }
  }
}
