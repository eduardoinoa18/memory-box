# Environment Configuration for Memory Box Platform
# Copy this file to .env.local and fill in your actual API keys

# ===== CORE BACKEND SERVICES =====
# Supabase (Database + Auth + Storage)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Firebase (Alternative Backend)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket

# ===== FILE STORAGE & CDN =====
# Cloudflare R2 (Recommended)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_BUCKET_NAME=memory-box-storage
CLOUDFLARE_PUBLIC_URL=your_cloudflare_r2_public_url

# AWS S3 (Alternative)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=memory-box-storage-backup

# ===== PAYMENT PROCESSING =====
# Stripe (Primary)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal (Alternative)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id

# ===== AI SERVICES =====
# OpenAI (ROB AI Primary)
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_ORGANIZATION_ID=org-your_organization_id

# Anthropic Claude (ROB AI Secondary)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key

# ===== ANALYTICS & MONITORING =====
# PostHog (User Analytics)
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_project_api_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Google Analytics (Alternative)
NEXT_PUBLIC_GA_TRACKING_ID=GA_MEASUREMENT_ID

# ===== SOCIAL MEDIA APIS =====
# Instagram Basic Display API
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# Facebook Graph API
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token

# YouTube Data API
YOUTUBE_API_KEY=your_youtube_api_key
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret

# LinkedIn API
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# TikTok Business API
TIKTOK_APP_ID=your_tiktok_app_id
TIKTOK_APP_SECRET=your_tiktok_app_secret
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token

# ===== COMMUNICATION SERVICES =====
# Resend (Email)
RESEND_API_KEY=re_your_resend_api_key

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Expo Push Notifications
EXPO_ACCESS_TOKEN=your_expo_access_token

# ===== DEPLOYMENT & HOSTING =====
# Vercel
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_vercel_project_id
VERCEL_TOKEN=your_vercel_token

# Expo EAS
EAS_PROJECT_ID=your_expo_project_id

# ===== ADMIN DASHBOARD SETTINGS =====
# JWT Secret for Admin Auth
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters

# Admin User Credentials (Default)
ADMIN_EMAIL=admin@memorybox.com
ADMIN_PASSWORD=SecureAdminPassword123!

# Database URLs
DATABASE_URL=your_database_connection_string
REDIS_URL=your_redis_connection_string_if_needed

# ===== SECURITY & MONITORING =====
# Sentry (Error Monitoring)
SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# Rate Limiting
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# ===== ROB AI CONFIGURATION =====
# ROB AI Features Toggle (true/false)
ROB_AI_ANALYTICS_ENABLED=true
ROB_AI_SUPPORT_ENABLED=true
ROB_AI_SOCIAL_ENABLED=true
ROB_AI_SUBSCRIPTION_ENABLED=true
ROB_AI_PLATFORM_OPTIMIZATION_ENABLED=true

# ROB AI Model Preferences
ROB_AI_PRIMARY_MODEL=gpt-4
ROB_AI_SECONDARY_MODEL=claude-3-sonnet
ROB_AI_MAX_TOKENS=4096
ROB_AI_TEMPERATURE=0.7

# ===== FEATURE FLAGS =====
# Platform Features (true/false)
FEATURE_FAMILY_SHARING=true
FEATURE_AI_ORGANIZATION=true
FEATURE_ADVANCED_SEARCH=true
FEATURE_COLLABORATION=true
FEATURE_API_ACCESS=false

# Subscription Tiers Available
SUBSCRIPTION_FREE_ENABLED=true
SUBSCRIPTION_PREMIUM_ENABLED=true
SUBSCRIPTION_FAMILY_ENABLED=true
SUBSCRIPTION_BUSINESS_ENABLED=true

# ===== MOBILE APP CONFIGURATION =====
# Expo Configuration
EXPO_PUBLIC_API_URL=https://your-api-domain.com/api
EXPO_PUBLIC_SUPABASE_URL=your_supabase_project_url
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# App Store Configuration
IOS_BUNDLE_ID=com.memorybox.app
ANDROID_PACKAGE_NAME=com.memorybox.app
APP_VERSION=1.0.0
BUILD_NUMBER=1

# ===== DEVELOPMENT SETTINGS =====
# Environment
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# Debug Settings
DEBUG_MODE=true
VERBOSE_LOGGING=true

# Local Development URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ===== PRODUCTION OVERRIDES =====
# Uncomment and modify for production deployment
# NODE_ENV=production
# NEXT_PUBLIC_APP_ENV=production
# NEXT_PUBLIC_APP_URL=https://app.memorybox.com
# NEXT_PUBLIC_API_URL=https://api.memorybox.com
# DEBUG_MODE=false
# VERBOSE_LOGGING=false
