{
  "name": "belapp-simple",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "expo start",
    "start:production": "expo start --no-dev --minify",
    "start:demo": "EXPO_PUBLIC_DEMO_MODE=true expo start --web --port 19006",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web --port 19006",
    "web:production": "expo start --web --port 19006 --clear --no-dev",
    "build:dev": "eas build --profile development",
    "build:preview": "eas build --profile preview",
    "build:production": "eas build --profile production",
    "build:ios": "eas build --platform ios",
    "build:android": "eas build --platform android",
    "submit:ios": "eas submit --platform ios",
    "submit:android": "eas submit --platform android",
    "deploy": "eas build --platform all --profile production && eas submit --platform all",
    "dev": "expo start --dev-client",
    "test": "jest",
    "lint": "eslint . --fix --quiet",
    "lint:check": "eslint .",
    "verify:production": "node scripts/verify-production-readiness.js",
    "security:audit": "npm audit",
    "build:web": "expo build:web",
    "deploy:web": "npm run build:web && vercel deploy",
    "clean": "expo r -c"
  },
  "dependencies": {
    "@expo/metro-runtime": "~5.0.4",
    "@expo/vector-icons": "^14.0.4",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-navigation/bottom-tabs": "^7.0.6",
    "@react-navigation/native": "^7.0.15",
    "@react-navigation/stack": "^7.0.15",
    "@sendgrid/mail": "^8.1.4",
    "@stripe/stripe-js": "^7.4.0",
    "date-fns": "^4.1.0",
    "expo": "^53.0.19",
    "expo-av": "~15.1.7",
    "expo-build-properties": "^0.14.8",
    "expo-camera": "~16.1.10",
    "expo-clipboard": "~7.1.5",
    "expo-document-picker": "~13.1.6",
    "expo-file-system": "^18.1.11",
    "expo-font": "~13.3.2",
    "expo-haptics": "~14.1.4",
    "expo-image-manipulator": "^13.1.7",
    "expo-image-picker": "~16.1.4",
    "expo-linear-gradient": "~14.1.5",
    "expo-local-authentication": "~16.0.5",
    "expo-notifications": "~0.31.4",
    "expo-secure-store": "~14.2.3",
    "expo-status-bar": "~2.2.3",
    "express": "^5.1.0",
    "firebase": "^11.10.0",
    "lottie-react-native": "7.2.2",
    "mustache": "^4.2.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-svg": "15.11.2",
    "react-native-swipe-gestures": "^1.0.5",
    "react-native-web": "^0.20.0",
    "react-native-webview": "13.13.5",
    "recharts": "^2.14.3",
    "twilio": "^5.3.6"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.28.0",
    "@react-native/eslint-config": "^0.76.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-native": "^5.0.0",
    "jest": "^29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11"
  }
}
